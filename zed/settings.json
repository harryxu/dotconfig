{
  "ui_font_size": 18,
  "ui_font_family": "Overpass Nerd Font",
  "buffer_font_size": 21,
  "buffer_font_family": "Iosevka Nerd Font",
  "theme": "macOS Classic Light",
  "vim_mode": true,
  "format_on_save": "off",
